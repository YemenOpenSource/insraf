generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int         @id @default(autoincrement())
  name          String      @db.VarChar(100)
  email         String      @unique
  password      String
}

model Department {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  levels        Level[]
}

model Level {
  id            Int         @id @default(autoincrement())
  name          String
  students      Student[]
  department    Department? @relation(fields: [departmentId], references: [id])
  departmentId  Int?
}

model Student {
  id             Int         @id @default(autoincrement())
  name           String
  date           String
  register       Int
  classification String
  password       String
  gender         Gender
  level          Level?      @relation(fields: [levelId], references: [id])
  levelId        Int?
}

enum Gender {
  MALE
  FEMALE
}